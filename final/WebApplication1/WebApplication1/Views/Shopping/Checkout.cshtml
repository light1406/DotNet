
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HrefALinkHeader = "/Content/css/checkout.css";
    ViewBag.RelALinkHeader = "stylesheet";
}

<!-- BREADCRUMB START -->
<div class="bg-breadcrumb">
    <div class="container-breadcrumb ">
        <div class="breadcrumb-header">
            <h2 class="breadcrumb-header__heading">CHECKOUT</h2>
        </div>
        <div class="breadcrumb-link">
            <p>HOME <span>/ CHECKOUT</span></p>

        </div>
        <div class="breadcrumb-filter">
            <a class="js-show-filter">
                <i class="fas fa-list"></i> SORT BY PRICE
            </a>

            <div class="modal">
                <div class="filter-price">
                    <ul class="list-price">
                        <li class="list-price__item">
                            <a href="">From $50 To $100</a>
                        </li>
                        <li class="list-price__item">
                            <a href="">From $100 To $400</a>
                        </li>
                        <li class="list-price__item">
                            <a href="">From $400 To $1000</a>
                        </li>
                        <li class="list-price__item">
                            <a href="">From $1000 To $1500</a>
                        </li>
                        <li class="list-price__item">
                            <a href="">From $1500 To $2500</a>
                        </li>
                        <li class="list-price__item">
                            <a href="">From $2500 To $3000</a>
                        </li>
                        <li class="list-price__item">
                            <a href="">Up $3000</a>
                        </li>
                    </ul>
                </div>
                <div class="modal-btn">
                    <button class="btn-exit">
                        <a><i class="fas fa-times"></i></a>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB END -->

<div class="container-checkout">
    <div class="checkout-left">
        <div class="checkout-left__header">
            <h2 class="checkout-left__header--heading">Payment Details</h2>
        </div>
        <div class="checkout-left__form">
            <form action="">
                <div class="checkout-left__form--input">
                    <label>Full Name</label>
                    <input type="text">
                </div>
                <div class="checkout-left__form--input">
                    <label>Address</label>
                    <input type="text">
                </div>
                <div class="checkout-left__form--input">
                    <label>Phone Number</label>
                    <input type="text">
                </div>
                <div class="checkout-left__form--input">
                    <label>Email</label>
                    <input type="text">
                </div>
                <div class="checkout-left__form--input">
                    <label>Note </label>
                    <textarea></textarea>
                </div>
            </form>
        </div>
    </div>
    <div class="checkout-right">
        <div class="checkout-right__header">
            <h2 class="checkout-right__header--heading">Order Details</h2>
        </div>
        <div class="checkout-right__bill">
            <div class="checkout-right__bill--title">
                <span>Product</span>
                <span>Price</span>
            </div>
            <div class="checkout-right__bill--info">
                <span>Hublot 2022</span>
                <span>x 10</span>
                <span class="info-price">$15.156</span>
            </div>
            <div class="checkout-right__bill--info">
                <span>Hublot 2022</span>
                <span>x 10</span>
                <span class="info-price">$15.156</span>
            </div>
            <div class="checkout-right__bill--info">
                <span>Hublot 2022</span>
                <span>x 10</span>
                <span class="info-price">$15.156</span>
            </div>
            <div class="checkout-right__bill--info">
                <span>Hublot 2022</span>
                <span>x 10</span>
                <span class="info-price">$15.156</span>
            </div>
            <div class="checkout-right__bill--title">
                <span>Subtotal</span>
                <span>$59.123</span>
            </div>
            <div class="checkout-right__bill--title">
                <span>Ship</span>
                <span>Free Shipping</span>
            </div>
            <div class="checkout-right__bill--title">
                <span>Payment Method</span>
                <span>Cash</span>
            </div>
            <div class="checkout-right__bill--btn">
                <button>
                    <a href="">CHECKOUT</a>
                </button>
            </div>
        </div>
    </div>
</div>

